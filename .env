# T-Bot Trading System Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=true
NODE_ENV=development
MOCK_MODE=true  # Enable mock trading without real API keys

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (Local development - connects to Docker services)
DB_NAME=tbot_dev
DB_USER=tbot
DB_PASSWORD=tbot_password
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://tbot:tbot_password@localhost:5432/tbot_dev

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis (Local development - connects to Docker services)
REDIS_PASSWORD=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Time Series Database Configuration
# =============================================================================
# InfluxDB (Local development - connects to Docker services)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=tbot_dev_token
INFLUXDB_ORG=tbot_dev
INFLUXDB_BUCKET=trading_data_dev
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=influxdb_dev_password

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Authentication
JWT_SECRET_KEY=dev_jwt_secret_key_at_least_32_characters_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Exchange API Configuration
# =============================================================================
# Binance
BINANCE_API_KEY=mock_binance_api_key
BINANCE_SECRET_KEY=mock_binance_secret_key
BINANCE_TESTNET=true

# Coinbase
COINBASE_API_KEY=mock_coinbase_api_key
COINBASE_SECRET_KEY=mock_coinbase_secret_key
COINBASE_SANDBOX=true

# OKX
OKX_API_KEY=ca668152-0a75-4516-ae5f-3968a9d9f8c9
OKX_SECRET_KEY=1BF0D9D352283C86C6EB6B1C2A87DF0C
OKX_PASSPHRASE=Marketa2@
OKX_SANDBOX=true

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# =============================================================================
# Monitoring Configuration (Optional)
# =============================================================================
GRAFANA_PASSWORD=dev_grafana_password_change_in_prod

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=mock_email_password
EMAIL_FROM=T-Bot Trading System <your_email@gmail.com>

# =============================================================================
# Webhook Configuration (Optional)
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# Backup Configuration (Optional)
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=mock_aws_access_key
AWS_SECRET_ACCESS_KEY=mock_aws_secret_key
AWS_REGION=us-west-2