# T-Bot Trading System - Staging Environment Configuration
# Copy this file to .env.staging and update with your actual values

# Application Configuration
ENV=staging
DEBUG=true
LOG_LEVEL=DEBUG

# Security Configuration
SECRET_KEY=your-staging-secret-key-here
JWT_SECRET=your-staging-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tbot_staging
DB_USER=tbot_user
DB_PASSWORD=your-staging-db-password-here
DATABASE_URL=postgresql://tbot_user:your-staging-db-password-here@localhost:5432/tbot_staging

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Service URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
WEBSOCKET_URL=ws://localhost:8000

# Service Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
BACKEND_REPLICAS=1
FRONTEND_REPLICAS=1

# Resource Limits (Staging - Lower limits)
BACKEND_MEMORY_LIMIT=512M
BACKEND_CPU_LIMIT=0.5
BACKEND_MEMORY_RESERVE=256M
BACKEND_CPU_RESERVE=0.25

FRONTEND_MEMORY_LIMIT=256M
FRONTEND_CPU_LIMIT=0.25

# Exchange API Configuration (Use testnet/sandbox for staging)
BINANCE_API_KEY=your-binance-testnet-api-key
BINANCE_SECRET_KEY=your-binance-testnet-secret
BINANCE_TESTNET=true

COINBASE_API_KEY=your-coinbase-sandbox-api-key
COINBASE_SECRET=your-coinbase-sandbox-secret
COINBASE_PASSPHRASE=your-coinbase-sandbox-passphrase
COINBASE_SANDBOX=true

OKX_API_KEY=your-okx-testnet-api-key
OKX_SECRET_KEY=your-okx-testnet-secret
OKX_PASSPHRASE=your-okx-testnet-passphrase
OKX_TESTNET=true

# Risk Management Configuration (More conservative for staging)
MAX_POSITION_SIZE=100
MAX_DAILY_LOSS=50
RISK_PER_TRADE=1
PORTFOLIO_RISK_LIMIT=5

# ML Model Configuration
ML_MODEL_REGISTRY_URL=http://localhost:5000
ML_INFERENCE_TIMEOUT=30
MODEL_UPDATE_INTERVAL=3600

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Notification Configuration (Optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=