# T-Bot Trading System Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=false
NODE_ENV=production

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL
DB_NAME=tbot_production
DB_USER=tbot
DB_PASSWORD=your_secure_database_password_here
DB_HOST=postgresql
DB_PORT=5432
DATABASE_URL=postgresql://tbot:your_secure_database_password_here@postgresql:5432/tbot_production

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Time Series Database Configuration
# =============================================================================
# InfluxDB
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your_secure_influxdb_token_here
INFLUXDB_ORG=tbot_production
INFLUXDB_BUCKET=trading_data_production
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=your_secure_influxdb_admin_password_here

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Authentication
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Exchange API Configuration
# =============================================================================
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=false

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
COINBASE_SANDBOX=false

# OKX
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_SANDBOX=false

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# =============================================================================
# Monitoring Configuration (Optional)
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password_here

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
EMAIL_FROM=T-Bot Trading System <your_email@gmail.com>

# =============================================================================
# Webhook Configuration (Optional)
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# Backup Configuration (Optional)
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2