{
  "dashboard": {
    "id": null,
    "title": "T-Bot System Performance & Resource Monitoring",
    "tags": ["system", "performance", "resources", "infrastructure"],
    "style": "dark",
    "timezone": "UTC",
    "refresh": "10s",
    "time": {
      "from": "now-4h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "system_cpu_usage_percent",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "min": 0,
            "max": 100
          }
        ],
        "thresholds": [
          {"value": 80, "colorMode": "critical", "op": "gt"},
          {"value": 95, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "system_memory_usage_percent",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Percent", 
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 3,
        "title": "Load Average",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "system_load_average_1m",
            "legendFormat": "1m",
            "refId": "A"
          },
          {
            "expr": "system_load_average_5m", 
            "legendFormat": "5m",
            "refId": "B"
          },
          {
            "expr": "system_load_average_15m",
            "legendFormat": "15m", 
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Load",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage Breakdown",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "system_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "Used (MB)",
            "refId": "A"
          },
          {
            "expr": "(system_memory_total_bytes - system_memory_usage_bytes) / 1024 / 1024",
            "legendFormat": "Available (MB)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "MB",
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "Thread Count",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "system_thread_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 200},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Garbage Collection Metrics",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(system_gc_collections_total[5m])",
            "legendFormat": "Collections/sec (Gen {{generation}})",
            "refId": "A"
          },
          {
            "expr": "rate(system_gc_objects_collected_total[5m])",
            "legendFormat": "Objects Collected/sec (Gen {{generation}})",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Rate",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "GC Time Impact",
        "type": "graph", 
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(system_gc_duration_seconds_sum[1m]) * 100",
            "legendFormat": "GC Time % (Gen {{generation}})",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 5, "colorMode": "critical", "op": "gt"},
          {"value": 10, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 8,
        "title": "Function Execution Latency (Top 10)",
        "type": "graph",
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, rate(function_execution_latency_seconds_bucket[5m])))",
            "legendFormat": "{{module}}.{{function}} P95",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "Memory Allocation by Function",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 34},
        "targets": [
          {
            "expr": "topk(10, rate(function_memory_allocation_bytes_sum[5m]))",
            "legendFormat": "{{module}}.{{function}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "Async Function Performance",
        "type": "graph",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 34},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(async_function_execution_latency_seconds_bucket[5m]))",
            "legendFormat": "{{module}}.{{function}} P95",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ]
      },
      {
        "id": 11,
        "title": "Performance Alerts Status",
        "type": "table",
        "gridPos": {"h": 9, "w": 24, "x": 0, "y": 43},
        "targets": [
          {
            "expr": "ALERTS{category=\"performance\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "timerange",
          "type": "interval",
          "query": "1m,5m,15m,30m,1h,4h",
          "current": "5m",
          "auto": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Performance Alerts",
          "datasource": "prometheus",
          "expr": "ALERTS{category=\"performance\", alertstate=\"firing\"}",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{summary}}"
        },
        {
          "name": "GC Events",
          "datasource": "prometheus", 
          "expr": "increase(system_gc_collections_total[1m]) > 5",
          "titleFormat": "High GC Activity",
          "textFormat": "Generation {{generation}} GC spike"
        }
      ]
    }
  }
}