# T-Bot Trading System - Production Environment Configuration
# Copy this file to .env.production and update with your actual values
# IMPORTANT: Use strong, unique passwords and API keys for production!

# Application Configuration
ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Security Configuration (CHANGE THESE VALUES!)
SECRET_KEY=change-this-to-a-strong-secret-key-for-production
JWT_SECRET=change-this-to-a-strong-jwt-secret-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tbot_production
DB_USER=tbot_user
DB_PASSWORD=change-this-to-a-strong-db-password
DATABASE_URL=postgresql://tbot_user:change-this-to-a-strong-db-password@localhost:5432/tbot_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change-this-to-a-strong-redis-password
REDIS_URL=redis://:change-this-to-a-strong-redis-password@localhost:6379

# Service URLs (Update with your actual domain)
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com
WEBSOCKET_URL=wss://api.yourdomain.com

# Service Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
BACKEND_REPLICAS=3
FRONTEND_REPLICAS=2

# Resource Limits (Production - Higher limits)
BACKEND_MEMORY_LIMIT=2G
BACKEND_CPU_LIMIT=1.0
BACKEND_MEMORY_RESERVE=1G
BACKEND_CPU_RESERVE=0.5

FRONTEND_MEMORY_LIMIT=512M
FRONTEND_CPU_LIMIT=0.5

# Exchange API Configuration (PRODUCTION - USE REAL KEYS)
BINANCE_API_KEY=your-binance-production-api-key
BINANCE_SECRET_KEY=your-binance-production-secret
BINANCE_TESTNET=false

COINBASE_API_KEY=your-coinbase-production-api-key
COINBASE_SECRET=your-coinbase-production-secret
COINBASE_PASSPHRASE=your-coinbase-production-passphrase
COINBASE_SANDBOX=false

OKX_API_KEY=your-okx-production-api-key
OKX_SECRET_KEY=your-okx-production-secret
OKX_PASSPHRASE=your-okx-production-passphrase
OKX_TESTNET=false

# Risk Management Configuration (Production settings)
MAX_POSITION_SIZE=10000
MAX_DAILY_LOSS=500
RISK_PER_TRADE=0.5
PORTFOLIO_RISK_LIMIT=2

# Trading Configuration
ENABLE_LIVE_TRADING=true
ORDER_TIMEOUT=30
MAX_SLIPPAGE=0.1
ENABLE_STOP_LOSS=true

# ML Model Configuration
ML_MODEL_REGISTRY_URL=https://models.yourdomain.com
ML_INFERENCE_TIMEOUT=10
MODEL_UPDATE_INTERVAL=1800

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=15
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@domain.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=admin@yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Rate Limiting (Production - More restrictive)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Performance Tuning
UVICORN_WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
MAX_REQUESTS_PER_WORKER=1000
WORKER_TIMEOUT=30

# External Services
REDIS_CLUSTER_ENABLED=false
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Security Headers
SECURE_HEADERS_ENABLED=true
CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com
TRUSTED_HOSTS=api.yourdomain.com,app.yourdomain.com