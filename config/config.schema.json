          "default": "",
          "description": "Coinbase API key",
          "minLength": 0,
          "title": "Coinbase Api Key",
          "type": "string"
        },
        "coinbase_api_secret": {
          "default": "",
          "description": "Coinbase API secret",
          "minLength": 0,
          "title": "Coinbase Api Secret",
          "type": "string"
        },
        "coinbase_sandbox": {
          "default": true,
          "description": "Use Coinbase sandbox",
          "title": "Coinbase Sandbox",
