        "okx_api_key": {
          "default": "",
          "description": "OKX API key",
          "minLength": 0,
          "title": "Okx Api Key",
          "type": "string"
        },
        "okx_api_secret": {
          "default": "",
          "description": "OKX API secret",
          "minLength": 0,
          "title": "Okx Api Secret",
          "type": "string"
        },
        "okx_passphrase": {
          "default": "",
          "description": "OKX API passphrase",
