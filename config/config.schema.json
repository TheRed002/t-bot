{
  "$defs": {
    "CapitalManagementConfig": {
      "description": "Capital management configuration for P-010A framework.",
      "properties": {
        "base_currency": {
          "default": "USDT",
          "description": "Base currency for all calculations",
          "pattern": "^[A-Z]{3,10}$",
          "title": "Base Currency",
          "type": "string"
        },
        "total_capital": {
          "default": 10000.0,
          "description": "Total available capital",
          "exclusiveMinimum": 0,
          "title": "Total Capital",
          "type": "number"
        },
        "emergency_reserve_pct": {
          "default": 0.1,
          "description": "Emergency reserve percentage (10%)",
          "title": "Emergency Reserve Pct",
          "type": "number"
        },
        "allocation_strategy": {
          "default": "risk_parity",
          "description": "Capital allocation strategy",
          "title": "Allocation Strategy",
          "type": "string"
        },
        "rebalance_frequency_hours": {
          "default": 24,
          "description": "Rebalancing frequency in hours",
          "title": "Rebalance Frequency Hours",
          "type": "integer"
        },
        "min_allocation_pct": {
          "default": 0.01,
          "description": "Minimum allocation percentage (1%)",
          "title": "Min Allocation Pct",
          "type": "number"
        },
        "max_allocation_pct": {
          "default": 0.25,
          "description": "Maximum allocation percentage (25%)",
          "title": "Max Allocation Pct",
          "type": "number"
        },
        "max_exchange_allocation_pct": {
          "default": 0.6,
          "description": "Maximum exchange allocation (60%)",
          "title": "Max Exchange Allocation Pct",
          "type": "number"
        },
        "min_exchange_balance": {
          "default": 100.0,
          "description": "Minimum exchange balance",
          "title": "Min Exchange Balance",
          "type": "number"
        },
        "max_daily_reallocation_pct": {
          "default": 0.2,
          "description": "Maximum daily reallocation (20%)",
          "title": "Max Daily Reallocation Pct",
          "type": "number"
        },
        "fund_flow_cooldown_minutes": {
          "default": 60,
          "description": "Fund flow cooldown in minutes",
          "title": "Fund Flow Cooldown Minutes",
          "type": "integer"
        },
        "min_deposit_amount": {
          "default": 1000.0,
          "description": "Minimum deposit amount",
          "title": "Min Deposit Amount",
          "type": "number"
        },
        "min_withdrawal_amount": {
          "default": 100.0,
          "description": "Minimum withdrawal amount",
          "title": "Min Withdrawal Amount",
          "type": "number"
        },
        "max_withdrawal_pct": {
          "default": 0.2,
          "description": "Maximum withdrawal percentage (20%)",
          "title": "Max Withdrawal Pct",
          "type": "number"
        },
        "supported_currencies": {
          "default": [
            "USDT",
            "BUSD",
            "USDC",
            "BTC",
            "ETH"
          ],
          "description": "Supported currencies for trading",
          "items": {
            "type": "string"
          },
          "title": "Supported Currencies",
          "type": "array"
        },
        "hedging_enabled": {
          "default": true,
          "description": "Enable currency hedging",
          "title": "Hedging Enabled",
          "type": "boolean"
        },
        "hedging_threshold": {
          "default": 0.1,
          "description": "Hedging threshold (10% exposure)",
          "title": "Hedging Threshold",
          "type": "number"
        },
        "hedge_ratio": {
          "default": 0.8,
          "description": "Hedge coverage ratio (80%)",
          "title": "Hedge Ratio",
          "type": "number"
        },
        "withdrawal_rules": {
          "additionalProperties": {
            "additionalProperties": true,
            "type": "object"
          },
          "default": {
            "profit_only": {
              "description": "Only withdraw realized profits",
              "enabled": true
            },
            "maintain_minimum": {
              "description": "Keep minimum capital for each strategy",
              "enabled": true
            },
            "performance_based": {
              "description": "Allow withdrawals only if performance > threshold",
              "enabled": false,
              "threshold": 0.05
            }
          },
          "description": "Withdrawal rule configurations",
          "title": "Withdrawal Rules",
          "type": "object"
        },
        "auto_compound_enabled": {
          "default": true,
          "description": "Enable auto-compounding",
          "title": "Auto Compound Enabled",
          "type": "boolean"
        },
        "auto_compound_frequency": {
          "default": "weekly",
          "description": "Auto-compound frequency",
          "title": "Auto Compound Frequency",
          "type": "string"
        },
        "profit_threshold": {
          "default": 100.0,
          "description": "Minimum profit for compounding",
          "title": "Profit Threshold",
          "type": "number"
        },
        "max_daily_loss_pct": {
          "default": 0.05,
          "description": "Maximum daily loss (5%)",
          "title": "Max Daily Loss Pct",
          "type": "number"
        },
        "max_weekly_loss_pct": {
          "default": 0.1,
          "description": "Maximum weekly loss (10%)",
          "title": "Max Weekly Loss Pct",
          "type": "number"
        },
        "max_monthly_loss_pct": {
          "default": 0.15,
          "description": "Maximum monthly loss (15%)",
          "title": "Max Monthly Loss Pct",
          "type": "number"
        },
        "profit_lock_pct": {
          "default": 0.5,
          "description": "Profit lock percentage (50%)",
          "title": "Profit Lock Pct",
          "type": "number"
        },
        "per_strategy_minimum": {
          "additionalProperties": {
            "type": "number"
          },
          "default": {
            "mean_reversion": 5000.0,
            "trend_following": 10000.0,
            "ml_strategy": 15000.0,
            "arbitrage": 20000.0,
            "market_making": 25000.0
          },
          "description": "Minimum capital requirements per strategy",
          "title": "Per Strategy Minimum",
          "type": "object"
        },
        "exchange_allocation_weights": {
          "additionalProperties": {
            "type": "number"
          },
          "default": {
            "binance": 0.5,
            "okx": 0.3,
            "coinbase": 0.2
          },
          "description": "Default exchange allocation weights",
          "title": "Exchange Allocation Weights",
          "type": "object"
        }
      },
      "title": "CapitalManagementConfig",
      "type": "object"
    },
    "DatabaseConfig": {
      "description": "Database configuration for PostgreSQL, Redis, and InfluxDB.",
      "properties": {
        "postgresql_host": {
          "default": "localhost",
          "description": "PostgreSQL host",
          "title": "Postgresql Host",
          "type": "string"
        },
        "postgresql_port": {
          "default": 5432,
          "description": "PostgreSQL port",
          "title": "Postgresql Port",
          "type": "integer"
        },
        "postgresql_database": {
          "default": "trading_bot",
          "description": "PostgreSQL database name",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "title": "Postgresql Database",
          "type": "string"
        },
        "postgresql_username": {
          "default": "trading_bot",
          "description": "PostgreSQL username",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "title": "Postgresql Username",
          "type": "string"
        },
        "postgresql_password": {
          "default": "trading_bot_password",
          "description": "PostgreSQL password",
          "minLength": 8,
          "title": "Postgresql Password",
          "type": "string"
        },
        "postgresql_pool_size": {
          "default": 10,
          "description": "PostgreSQL connection pool size",
          "title": "Postgresql Pool Size",
          "type": "integer"
        },
        "redis_host": {
          "default": "localhost",
          "description": "Redis host",
          "title": "Redis Host",
          "type": "string"
        },
        "redis_port": {
          "default": 6379,
          "description": "Redis port",
          "title": "Redis Port",
          "type": "integer"
        },
        "redis_password": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Redis password",
          "title": "Redis Password"
        },
        "redis_db": {
          "default": 0,
          "description": "Redis database number",
          "title": "Redis Db",
          "type": "integer"
        },
        "influxdb_host": {
          "default": "localhost",
          "description": "InfluxDB host",
          "title": "Influxdb Host",
          "type": "string"
        },
        "influxdb_port": {
          "default": 8086,
          "description": "InfluxDB port",
          "title": "Influxdb Port",
          "type": "integer"
        },
        "influxdb_token": {
          "default": "test-token",
          "description": "InfluxDB token",
          "title": "Influxdb Token",
          "type": "string"
        },
        "influxdb_org": {
          "default": "test-org",
          "description": "InfluxDB organization",
          "title": "Influxdb Org",
          "type": "string"
        },
        "influxdb_bucket": {
          "default": "trading-data",
          "description": "InfluxDB bucket",
          "title": "Influxdb Bucket",
          "type": "string"
        }
      },
      "title": "DatabaseConfig",
      "type": "object"
    },
    "ErrorHandlingConfig": {
      "description": "Error handling configuration for P-002A framework.",
      "properties": {
        "circuit_breaker_failure_threshold": {
          "default": 5,
          "description": "Circuit breaker failure threshold",
          "title": "Circuit Breaker Failure Threshold",
          "type": "integer"
        },
        "circuit_breaker_recovery_timeout": {
          "default": 30,
          "description": "Circuit breaker recovery timeout in seconds",
          "title": "Circuit Breaker Recovery Timeout",
          "type": "integer"
        },
        "max_retry_attempts": {
          "default": 3,
          "description": "Maximum retry attempts",
          "title": "Max Retry Attempts",
          "type": "integer"
        },
        "retry_backoff_factor": {
          "default": 2.0,
          "description": "Retry backoff factor",
          "title": "Retry Backoff Factor",
          "type": "number"
        },
        "retry_max_delay": {
          "default": 60,
          "description": "Maximum retry delay in seconds",
          "title": "Retry Max Delay",
          "type": "integer"
        },
        "pattern_detection_enabled": {
          "default": true,
          "description": "Enable error pattern detection",
          "title": "Pattern Detection Enabled",
          "type": "boolean"
        },
        "correlation_analysis_enabled": {
          "default": true,
          "description": "Enable correlation analysis",
          "title": "Correlation Analysis Enabled",
          "type": "boolean"
        },
        "predictive_alerts_enabled": {
          "default": true,
          "description": "Enable predictive alerts",
          "title": "Predictive Alerts Enabled",
          "type": "boolean"
        },
        "state_validation_frequency": {
          "default": 60,
          "description": "State validation frequency in seconds",
          "title": "State Validation Frequency",
          "type": "integer"
        },
        "auto_reconciliation_enabled": {
          "default": true,
          "description": "Enable automatic reconciliation",
          "title": "Auto Reconciliation Enabled",
          "type": "boolean"
        },
        "max_discrepancy_threshold": {
          "default": 0.01,
          "description": "Maximum discrepancy threshold",
          "title": "Max Discrepancy Threshold",
          "type": "number"
        },
        "partial_fill_min_percentage": {
          "default": 0.5,
          "description": "Minimum fill percentage for partial orders",
          "title": "Partial Fill Min Percentage",
          "type": "number"
        },
        "network_max_offline_duration": {
          "default": 300,
          "description": "Maximum offline duration in seconds",
          "title": "Network Max Offline Duration",
          "type": "integer"
        },
        "data_feed_max_staleness": {
          "default": 30,
          "description": "Maximum data staleness in seconds",
          "title": "Data Feed Max Staleness",
          "type": "integer"
        },
        "order_rejection_max_retries": {
          "default": 2,
          "description": "Maximum retry attempts for rejected orders",
          "title": "Order Rejection Max Retries",
          "type": "integer"
        }
      },
      "title": "ErrorHandlingConfig",
      "type": "object"
    },
    "ExchangeConfig": {
      "description": "Exchange configuration for API credentials and rate limits.",
