        "default_timeout": {
          "default": 30,
          "description": "Default exchange API timeout",
          "title": "Default Timeout",
          "type": "integer"
        },
        "max_retries": {
          "default": 3,
          "description": "Maximum retry attempts for exchange API calls",
          "title": "Max Retries",
          "type": "integer"
        },
        "binance_api_key": {
          "default": "",
          "description": "Binance API key",
          "minLength": 0,
          "title": "Binance Api Key",
          "type": "string"
        },
        "binance_api_secret": {
          "default": "",
          "description": "Binance API secret",
          "minLength": 0,
          "title": "Binance Api Secret",
          "type": "string"
        },
        "binance_testnet": {
          "default": true,
