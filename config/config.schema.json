          "title": "Rate Limits",
          "type": "object"
        },
        "supported_exchanges": {
          "default": [
            "binance",
            "okx",
            "coinbase"
          ],
          "description": "List of supported exchanges",
          "items": {
            "type": "string"
          },
          "title": "Supported Exchanges",
          "type": "array"
        }
      },
      "title": "ExchangeConfig",
      "type": "object"
    },
    "MLConfig": {
      "description": "Machine Learning configuration for P-014 framework.",
      "properties": {
        "model_registry_path": {
          "default": "models/registry",
          "description": "Path to model registry",
          "title": "Model Registry Path",
          "type": "string"
        },
        "artifact_store_path": {
          "default": "models/artifacts",
          "description": "Path to model artifacts",
          "title": "Artifact Store Path",
          "type": "string"
        },
        "model_cache_size": {
          "default": 10,
          "description": "Number of models to cache in memory",
          "title": "Model Cache Size",
          "type": "integer"
        },
        "default_train_test_split": {
          "default": 0.8,
          "description": "Default train/test split ratio",
          "title": "Default Train Test Split",
          "type": "number"
        },
        "default_validation_split": {
          "default": 0.2,
