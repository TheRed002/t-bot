# T-Bot Trading System Development Environment Configuration
# This file contains development-specific settings

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=true
NODE_ENV=development

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL
DB_NAME=tbot_dev
DB_USER=tbot
DB_PASSWORD=tbot_password
DB_HOST=postgresql
DB_PORT=5432
DATABASE_URL=postgresql://tbot:tbot_password@postgresql:5432/tbot_dev

# =============================================================================
# Cache Configuration
# =============================================================================
# Redis
REDIS_PASSWORD=redis_dev_password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Time Series Database Configuration
# =============================================================================
# InfluxDB
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=tbot_dev_token
INFLUXDB_ORG=tbot_dev
INFLUXDB_BUCKET=trading_data_dev
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=influxdb_dev_password

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Authentication
JWT_SECRET_KEY=dev_secret_key_change_in_production_at_least_32_chars_long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# =============================================================================
# Exchange API Configuration (Testnet/Sandbox)
# =============================================================================
# Binance Testnet
BINANCE_API_KEY=your_binance_testnet_api_key
BINANCE_SECRET_KEY=your_binance_testnet_secret_key
BINANCE_TESTNET=true

# Coinbase Sandbox
COINBASE_API_KEY=your_coinbase_sandbox_api_key
COINBASE_SECRET_KEY=your_coinbase_sandbox_secret_key
COINBASE_SANDBOX=true

# OKX Demo Trading
OKX_API_KEY=your_okx_demo_api_key
OKX_SECRET_KEY=your_okx_demo_secret_key
OKX_PASSPHRASE=your_okx_demo_passphrase
OKX_SANDBOX=true

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# =============================================================================
# Development Tools Configuration
# =============================================================================
# Enable development features
ENABLE_MOCK_DATA=true
ENABLE_DEBUG_LOGGING=true
ENABLE_API_DOCS=true

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@tbot.local
PGADMIN_DEFAULT_PASSWORD=pgadmin_dev_password

# Redis Commander
REDIS_COMMANDER_PASSWORD=redis_commander_dev_password

# =============================================================================
# Monitoring Configuration
# =============================================================================
GRAFANA_PASSWORD=grafana_dev_password

# =============================================================================
# Email Configuration (Development - Optional)
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
EMAIL_FROM=T-Bot Dev <dev@tbot.local>

# =============================================================================
# Webhook Configuration (Development - Optional)
# =============================================================================
# Use webhook.site or similar for development testing
DISCORD_WEBHOOK_URL=https://webhook.site/your-unique-webhook-id
SLACK_WEBHOOK_URL=https://webhook.site/your-unique-webhook-id