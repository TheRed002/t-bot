# T-Bot Trading System Environment Configuration Template
# Copy this file to .env and configure your settings

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

APP_NAME="T-Bot Trading System"
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Data and logs directories
DATA_DIR=./data
LOGS_DIR=./logs

# ============================================================================
# TRADING ENVIRONMENT CONFIGURATION
# ============================================================================

# Global trading environment (sandbox, live, mock, hybrid)
GLOBAL_ENVIRONMENT=sandbox

# Production safeguards
PRODUCTION_CONFIRMATION=true
ENABLE_PRODUCTION_SAFEGUARDS=true
REQUIRE_CREDENTIALS_VALIDATION=true
MAX_ENVIRONMENT_SWITCHES_PER_HOUR=5

# Per-exchange environment overrides (optional)
# Uncomment to override global environment for specific exchanges
# BINANCE_ENVIRONMENT=sandbox    # sandbox, testnet, live, production
# COINBASE_ENVIRONMENT=sandbox   # sandbox, live, production  
# OKX_ENVIRONMENT=sandbox        # sandbox, testnet, live, production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Configuration
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=trading_bot
POSTGRESQL_USERNAME=trading_user
POSTGRESQL_PASSWORD=your_postgresql_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0

# ============================================================================
# SANDBOX EXCHANGE CREDENTIALS
# ============================================================================

# Binance Sandbox/Testnet
BINANCE_TESTNET_API_KEY=your_binance_testnet_api_key
BINANCE_TESTNET_API_SECRET=your_binance_testnet_api_secret
BINANCE_TESTNET=true

# Coinbase Pro Sandbox
COINBASE_SANDBOX_API_KEY=your_coinbase_sandbox_api_key
COINBASE_SANDBOX_API_SECRET=your_coinbase_sandbox_api_secret
COINBASE_SANDBOX_PASSPHRASE=your_coinbase_sandbox_passphrase
COINBASE_SANDBOX=true

# OKX Sandbox/Demo
OKX_SANDBOX_API_KEY=your_okx_demo_api_key
OKX_SANDBOX_API_SECRET=your_okx_demo_api_secret
OKX_SANDBOX_PASSPHRASE=your_okx_demo_passphrase
OKX_TESTNET=true

# ============================================================================
# PRODUCTION EXCHANGE CREDENTIALS
# WARNING: Keep these credentials secure and never commit to version control
# ============================================================================

# Binance Production (LIVE TRADING)
BINANCE_LIVE_API_KEY=your_binance_production_api_key
BINANCE_LIVE_API_SECRET=your_binance_production_api_secret

# Coinbase Pro Production (LIVE TRADING)
COINBASE_LIVE_API_KEY=your_coinbase_production_api_key
COINBASE_LIVE_API_SECRET=your_coinbase_production_api_secret
COINBASE_LIVE_PASSPHRASE=your_coinbase_production_passphrase

# OKX Production (LIVE TRADING)
OKX_LIVE_API_KEY=your_okx_production_api_key
OKX_LIVE_API_SECRET=your_okx_production_api_secret
OKX_LIVE_PASSPHRASE=your_okx_production_passphrase

# ============================================================================
# PRODUCTION ENDPOINT CONFIGURATIONS
# ============================================================================

# Binance Production Endpoints
BINANCE_LIVE_API_URL=https://api.binance.com
BINANCE_LIVE_WS_URL=wss://stream.binance.com:9443

# Coinbase Pro Production Endpoints
COINBASE_LIVE_API_URL=https://api.exchange.coinbase.com
COINBASE_LIVE_WS_URL=wss://ws-feed.exchange.coinbase.com

# OKX Production Endpoints
OKX_LIVE_API_URL=https://www.okx.com/api/v5
OKX_LIVE_WS_URL=wss://ws.okx.com:8443/ws/v5/public

# ============================================================================
# LEGACY EXCHANGE CONFIGURATION (for backward compatibility)
# ============================================================================

# Default exchange settings
DEFAULT_EXCHANGE=binance
BINANCE_API_KEY=${BINANCE_TESTNET_API_KEY}
BINANCE_API_SECRET=${BINANCE_TESTNET_API_SECRET}
COINBASE_API_KEY=${COINBASE_SANDBOX_API_KEY}
COINBASE_API_SECRET=${COINBASE_SANDBOX_API_SECRET}
COINBASE_PASSPHRASE=${COINBASE_SANDBOX_PASSPHRASE}
OKX_API_KEY=${OKX_SANDBOX_API_KEY}
OKX_API_SECRET=${OKX_SANDBOX_API_SECRET}

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

# Position sizing limits
MAX_POSITION_SIZE=0.02           # Maximum 2% of portfolio per position
RISK_PER_TRADE=0.01             # Maximum 1% risk per trade
MAX_TOTAL_EXPOSURE=0.10         # Maximum 10% total exposure

# Stop loss and risk controls
REQUIRE_STOP_LOSS=true
MAX_DAILY_LOSS=0.05            # Maximum 5% daily loss limit
CIRCUIT_BREAKER_LOSS_THRESHOLD=0.03  # Stop trading at 3% daily loss

# Emergency controls
EMERGENCY_SHUTDOWN_ENABLED=true
MAX_CONSECUTIVE_LOSSES=5
POSITION_SIZE_SCALING=true

# ============================================================================
# EXECUTION AND TRADING
# ============================================================================

# Order execution settings
DEFAULT_ORDER_TYPE=LIMIT
ORDER_TIMEOUT_SECONDS=30
MAX_SLIPPAGE_PERCENT=0.1
ENABLE_PARTIAL_FILLS=true

# Smart routing and algorithms
ENABLE_SMART_ROUTING=true
PREFERRED_VENUES=["binance", "coinbase"]
EXECUTION_ALGORITHM=TWAP
MIN_ORDER_SIZE_USD=10

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# API security
API_RATE_LIMIT=100
REQUEST_TIMEOUT_SECONDS=30
MAX_CONCURRENT_REQUESTS=10

# Authentication and encryption
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_TIMEOUT_MINUTES=60

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Monitoring settings
ENABLE_METRICS_COLLECTION=true
METRICS_EXPORT_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Logging configuration
ENABLE_FILE_LOGGING=true
LOG_RETENTION_DAYS=30
MAX_LOG_FILE_SIZE_MB=100

# Alerting
ENABLE_EMAIL_ALERTS=true
ALERT_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ============================================================================
# DEVELOPMENT AND TESTING
# ============================================================================

# Development flags
ENABLE_MOCK_TRADING=false
ENABLE_PAPER_TRADING=false
MOCK_LATENCY_MS=100

# Testing settings
RUN_INTEGRATION_TESTS=false
TEST_DATA_SEED=42
ENABLE_TEST_MODE=false

# ============================================================================
# ADVANCED FEATURES
# ============================================================================

# Machine learning and AI
ENABLE_ML_FEATURES=true
ML_MODEL_UPDATE_INTERVAL=3600
FEATURE_STORE_ENABLED=true

# Strategy configurations
ENABLE_DYNAMIC_STRATEGIES=true
STRATEGY_OPTIMIZATION_ENABLED=true
BACKTEST_ENABLED=true

# Capital management
ENABLE_AUTO_REBALANCING=false
REBALANCING_FREQUENCY=daily
MIN_CASH_RESERVE=0.05

# ============================================================================
# NOTES AND WARNINGS
# ============================================================================

# IMPORTANT SECURITY NOTES:
# 1. Never commit production credentials to version control
# 2. Use strong, unique API keys and secrets
# 3. Regularly rotate your API credentials
# 4. Enable IP whitelisting on exchanges when possible
# 5. Use separate credentials for sandbox and production
# 6. Monitor your accounts for unauthorized access

# CONFIGURATION VALIDATION:
# 1. Test all configurations in sandbox before production
# 2. Verify risk limits are appropriate for your capital
# 3. Ensure proper database and Redis connectivity
# 4. Test exchange connectivity and API limits
# 5. Validate monitoring and alerting systems

# PRODUCTION DEPLOYMENT:
# 1. Set GLOBAL_ENVIRONMENT=live for production trading
# 2. Configure production credentials carefully
# 3. Enable all production safeguards
# 4. Set up proper monitoring and alerting
# 5. Have emergency shutdown procedures ready